{
  "compilerOptions": {
    "target": "es2020",
    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./target/js/",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    // Needed for CommonJS modules
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true
  }
}
